<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".SoundFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/down_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/playlist_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/playlist_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView

            android:id="@+id/Calming_Playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp"
            android:text="@string/calming_playlist"
            android:textColor="#371B34"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/down_arrow"

            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/image"
            android:layout_width="301dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/sound_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@id/Calming_Playlist"
            app:layout_constraintTop_toBottomOf="@id/Calming_Playlist" />

        <TextView

            android:id="@+id/Rain_On_Glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginHorizontal="86dp"

            android:text="Rain On Glass "
            android:textColor="#371B34"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/image"

            app:layout_constraintStart_toStartOf="parent"/>
        <TextView

            android:id="@+id/painting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="By: Painting with Passion"
            android:textColor="#371B34"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/Rain_On_Glass"

            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/playlist"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="119dp"


            android:src="@drawable/player_icon"
            app:layout_constraintStart_toStartOf="@id/Calming_Playlist"
            app:layout_constraintTop_toBottomOf="@id/painting"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


