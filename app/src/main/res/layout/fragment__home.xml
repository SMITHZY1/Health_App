<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#FFFFFF"

    tools:context=".HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">



        <ImageView
            android:id="@+id/image"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/hamburger_icon"
            app:layout_constraintStart_toStartOf="@id/welcome"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/playlist_icon"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/hamburger_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:text="welcome_back"
            android:textColor="#371B34"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="140dp"
            android:text="sarina"
            android:textAlignment="center"
            android:textColor="#371B34"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/welcome"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/how_are_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="118dp"
            android:text="how are you feeling today"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/welcome"
            app:layout_constraintTop_toBottomOf="@id/welcome" />
        <ImageView
            android:id="@+id/feeling"
            android:layout_width="379.88dp"
            android:layout_height="101dp"
            android:src="@drawable/feeling"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="@id/how_are_you"
            app:layout_constraintTop_toBottomOf="@id/how_are_you" />

        <TextView
            android:id="@+id/today_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="today stask"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/feeling"
            app:layout_constraintTop_toBottomOf="@id/feeling" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:background="#EB9377"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F8D8D8"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintStart_toStartOf="@id/today_task"
            app:layout_constraintTop_toBottomOf="@id/today_task" />

        <TextView
            android:id="@+id/peer_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="25dp"
            android:text="peer group meetup"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="#371B34"
            app:layout_constraintStart_toStartOf="@id/card1"
            app:layout_constraintTop_toTopOf="@id/card1" />

        <TextView
            android:id="@+id/lets_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="lets open up to the thing that"
            android:textSize="15sp"
            android:textColor="#371B34"
            app:layout_constraintStart_toStartOf="@id/peer_group"
            app:layout_constraintTop_toBottomOf="@id/peer_group" />

        <TextView
            android:id="@+id/matters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="matters amoung the people "
            android:textSize="16dp"
            android:textColor="#371B34"
            app:layout_constraintStart_toStartOf="@id/lets_open"
            app:layout_constraintTop_toBottomOf="@id/lets_open" />
        <ImageView
            android:id="@+id/join_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/join_now"
            app:layout_constraintStart_toStartOf="@id/matters"
            app:layout_constraintTop_toBottomOf="@id/matters" />
        <ImageView
            android:id="@+id/meet_up_image"
            android:layout_width="85.27dp"
            android:layout_height="80dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="23dp"
            android:src="@drawable/meetup_icon"
            app:layout_constraintEnd_toEndOf="@id/card1"
            app:layout_constraintStart_toEndOf="@id/peer_group"
            app:layout_constraintTop_toTopOf="@id/card1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FADDB5"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintStart_toStartOf="@id/card1"
            app:layout_constraintTop_toBottomOf="@id/card1" />
        <TextView
            android:id="@+id/meditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="meditation"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#371B34"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintStart_toStartOf="@id/card2"
            app:layout_constraintTop_toTopOf="@id/card2" />
        <TextView
            android:id="@+id/aura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="aura is the_most important thing"
            android:textSize="15sp"
            android:textColor="#371B34"
            app:layout_constraintStart_toStartOf="@id/meditation"
            app:layout_constraintTop_toBottomOf="@id/meditation" />

        <TextView
            android:id="@+id/matters_to_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="that matters to you join us on"
            android:textSize="15sp"
            android:textColor="#371B34"
            app:layout_constraintStart_toStartOf="@id/aura"
            app:layout_constraintTop_toBottomOf="@id/aura" />

        <ImageView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/matters_to_you"
            app:layout_constraintTop_toBottomOf="@id/matters_to_you" />

        <ImageView
            android:id="@+id/meditation_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/meditation_icon"
            app:layout_constraintEnd_toEndOf="@id/card2"
            app:layout_constraintStart_toEndOf="@id/aura"
            app:layout_constraintTop_toTopOf="@id/card2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
